@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đóa Hồng Chơi Vơi - NhacCuaTui</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #121212;
            margin: 0;
            padding: 0;
            color: #fff;
        }

        .header {
            background-color: #1f1f1f;
            padding: 10px 15px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border-bottom: 1px solid #333;
        }

            .header a {
                font-size: 0.9rem;
                color: #fff;
                text-decoration: none;
            }

        .content {
            max-width: 900px;
            margin: 20px auto;
            padding: 10px;
        }

        .song-info {
            padding: 20px;
            background-color: #181818;
            border-radius: 15px;
            position: relative;
            overflow: hidden;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .song-title {
            font-size: 1.8rem;
            font-weight: bold;
            color: #fff;
            margin-bottom: 5px;
        }

        .artist {
            color: #aaa;
            font-size: 1.2rem;
            margin-bottom: 15px;
        }

        .actions {
            margin-bottom: 15px;
        }

            .actions a {
                color: #fff;
                margin-right: 15px;
                font-size: 1rem;
                text-decoration: none;
            }

                .actions a::before {
                    margin-right: 5px;
                    content: attr(data-icon);
                }

        .audio-player {
            width: 100%;
            border-radius: 10px;
            border: 1px solid #333;
            padding: 10px;
            background: #000;
        }

        .playlist-section, .related-songs-section {
            margin-top: 30px;
        }

        .section-title {
            font-size: 1.4rem;
            font-weight: bold;
            margin-bottom: 15px;
            color: #fff;
        }

        .playlist-grid, .related-songs-list {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
        }

        .playlist-item {
            width: 150px;
            text-align: center;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            padding: 10px;
            background-color: #1f1f1f;
            transition: all 0.3s ease-in-out;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
        }

            .playlist-item:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 15px rgba(255, 255, 255, 0.2);
                border-color: rgba(255, 255, 255, 0.5);
            }

            .playlist-item img {
                width: 100%;
                border-radius: 5px;
                margin-bottom: 10px;
            }

        .playlist-item-title {
            font-size: 0.9rem;
            font-weight: bold;
            color: #fff;
        }

        .playlist-item-artist {
            font-size: 0.8rem;
            color: #aaa;
        }

        .related-song {
            display: flex;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

            .related-song img {
                width: 50px;
                height: 50px;
                border-radius: 5px;
                margin-right: 10px;
            }

        .related-song-info {
            flex: 1;
        }

        .related-song-title {
            font-size: 0.9rem;
            font-weight: bold;
            color: #fff;
        }

        .related-song-artist {
            font-size: 0.8rem;
            color: #aaa;
            audio .audio-player

        {
            background-color: #121212 !important; 
            border: none !important; 
            box-shadow: none !important; 
        }

        audio.audio-player {
            background-color: #121212 !important; 
            border: none !important; 
            box-shadow: none !important; 
            width: 100%;
            border-radius: 10px;
        }

            audio.audio-player::-webkit-media-controls-panel {
                background-color: #121212 !important; 
                color: #fff !important; 
                border: none;
                box-shadow: none !important;
            }

            audio.audio-player::-webkit-media-controls-play-button,
            audio.audio-player::-webkit-media-controls-pause-button {
                background-color: #282828 !important; 
                color: #1db954 !important; 
                border: none;
                border-radius: 50%;
                width: 40px;
                height: 40px;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.5);
                transition: transform 0.3s ease, background-color 0.3s ease;
            }

      
                audio.audio-player::-webkit-media-controls-play-button:hover,
                audio.audio-player::-webkit-media-controls-pause-button:hover {
                    background-color: #1db954 !important; 
                    color: #000;
                    transform: scale(1.1);
                }

            audio.audio-player::-webkit-media-controls-timeline {
                background-color: #333 !important; 
                height: 4px;
                border-radius: 2px;
            }

          /
            audio.audio-player::-webkit-media-controls-current-time-display,
            audio.audio-player::-webkit-media-controls-time-remaining-display {
                font-size: 12px;
                color: #aaa !important; 
            }

            
            audio.audio-player::-webkit-media-controls-volume-slider-container {
                background: #282828 !important; 
            }

            audio.audio-player::-webkit-media-controls-volume-slider {
                background: #444 !important; 
                height: 4px;
                border-radius: 2px;
            }

            audio.audio-player::-webkit-media-controls-volume-slider-thumb {
                background: #1db954 !important;
                width: 10px;
                height: 10px;
                border-radius: 50%;
            }



    </style>
</head>
<body>

    <div class="header">
        <div>Nghe nhạc &gt; Bài hát NhacCuaTui &gt; Đóa Hồng Chơi Vơi</div>
