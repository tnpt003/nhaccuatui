            <div class="related-songs-list">
                <div class="related-song">
                   <img src="~/Image/Data/sontung1.png"  alt="Related 1">
                    <div class="related-song-info">
                        <div class="related-song-title">Chơi Vơi</div>
                        <div class="related-song-artist">Hồ Ngọc Hà</div>
                    </div>
                </div>
                <div class="related-song">
                   <img src="~/Image/Data/chipu1.png"  alt="Related 2">
                    <div class="related-song-info">
                        <div class="related-song-title">999 Đóa Hoa Hồng</div>
                        <div class="related-song-artist">Saimi Remix</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>
