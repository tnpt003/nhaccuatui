@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bản Sắc Việt - Playlist</title>
    <link href="~/Content/Core/Core.css" rel="stylesheet" />
</head>

<body>
    <div class="box-content">
        <div class="wrap">
            <div class="content-wrap">
                <div class="playlist-content">
                    <div class="playlist-container">
                        <div class="playlist-header">
                            <div class="album-art">
                                <img src="~/Image/NhacCuaTui_2022logo.png" alt="Album Art">
                            </div>
                            <div class="playlist-info">
                                <h2>Bản Sắc Việt - Various Artists</h2>
                                <p class="song-lyrics">
                                    <span class="highlighted">Ở mấy lội, lội, lội sông</span><br>
                                    Ồ mấy đi tìm, em nhớ thương ai
                                </p>
                                <div class="audio-controls">
                                    <span class="time">01:23 / 04:14</span>
                                    <span class="bitrate">128kbps</span>
                                </div>
                            </div>
                        </div>

                        <div class="song-list">
                            <ul>
                                <li class="song active">
                                    <span class="song-number">2.</span>
                                    <span class="song-title">Trống Cơm</span> - Cường Seven, SOOBIN, Tự Long
                                    <span class="song-actions">
                                        <button>▶</button>
                                        <button>⟳</button>
                                        <button>⧉</button>
                                    </span>
                                </li>
                                <li class="song">
                                    <span class="song-number">1.</span>
                                    <span class="song-title">Buồn Trăng</span> - Phương Mỹ Chi, DTAP
                                    <span class="song-actions">
                                        <button>▶</button>
                                        <button>⟳</button>
                                        <button>⧉</button>
                                    </span>
                                </li>
                                <li class="song">
                                    <span class="song-number">3.</span>
                                    <span class="song-title">Theo Em Về Nhà</span> - Ngọc Mai
                                    <span class="song-actions">
                                        <button>▶</button>
                                        <button>⟳</button>
                                        <button>⧉</button>
                                    </span>
                                </li>
                            </ul>
                        </div>

                        <div class="playlist-footer">
                            <div class="creator">
                                <img src="~/Image/NhacCuaTui_2022logo.png" alt="Creator Avatar">
                                <span>Created by: thiennhat92</span>
                            </div>
                            <div class="playlist-actions">
                                <button>Add to Playlist</button>
                                <button>Download Playlist</button>
                                <button>Share</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
