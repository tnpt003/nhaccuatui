
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/Shared.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dropdown Menu</title>

</head>
<body>
    <section>
        <div class="container">
            <!-- Left Section (Playlists) -->
            <div class="left-section">
                <div class="section-title">VŨ TRỤ NHẠC VIỆT</div>
                <div class="playlist">
                    <div class="playlist-item">
                        <img src="Hip-Hop việt.jpg" alt="Hip-Hop Việt">
                        <div class="playlist-item-title">Hip-Hop Việt</div>
                    </div>
                    <div class="playlist-item">
                        <img src="genz.jpg" alt="Gen Z">
                        <div class="playlist-item-title">Gen Gi Gen Z</div>
                    </div>
                    <div class="playlist-item">
                        <img src="nhacmientay.jpg" alt="Nhạc Miền Tây">
                        <div class="playlist-item-title">Nhạc Miền Tây</div>
                    </div>
                    <!-- Add more playlist items as needed -->
                </div>
                <div class="section-title">QUỐC TẾ NỔI BẬT</div>
                <div class="playlist">
                    <div class="playlist-item">
                        <img src="jjamm.jpg" alt="J-Jam">
                        <div class="playlist-item-title">J-Jam</div>
                    </div>
                    <div class="playlist-item">
                        <img src="kpop.jpg" alt="K-POP Today's Hits">
                        <div class="playlist-item-title">K-POP Today's Hits</div>
                    </div>
                    <div class="playlist-item">
                        <img src="hoangu.jpg" alt="Hoa Ngữ">
                        <div class="playlist-item-title">Nhạc Phim Hoa Ngữ</div>
                    </div>
                    <!-- Add more playlist items as needed -->
                </div>
            </div>
            <!-- Right Section (Song Ranking) -->
            <div class="right-section">
                <div class="section-title">BXH BÀI HÁT</div>
                <div class="tab-container">
                    <div class="tab active">Việt Nam</div>
                    <div class="tab">Âu Mỹ</div>
                    <div class="tab">Hàn Quốc</div>
                </div>
                <div class="song-list">
                    <div class="song-item">
                        <div class="song-rank">1</div>
                        <img src="song1.jpg" alt="cover" width="50" height="50">
                        <div class="song-info">
                            <div class="song-title">TÌNH ĐẦU QUÁ CHÉN</div>
                            <div class="song-artist">ANH TRAI "SAY HI", Quang Hùng MasterD, Negav, Pháp Kiều, ERIK</div>
                        </div>
                    </div>
                    <div class="song-item">
                        <div class="song-rank">2</div>
                        <div class="song-info">
                            <div class="song-title">Chăm Hoa</div>
                            <div class="song-artist">MONO</div>
                        </div>
                    </div>
                    <div class="song-item">
                        <div class="song-rank">3</div>
                        <div class="song-info">
                            <div class="song-title">bình yên</div>
                            <div class="song-artist">Vũ., Binz</div>
                        </div>
                    </div>
                    <div class="song-item">
                        <div class="song-rank">4</div>
                        <div class="song-info">
                            <div class="song-title">Tràn Bộ Nhớ </div>
                            <div class="song-artist">ANH TRAI "SAY HI", Dương Domic </div>
                        </div>
                    </div>

                    <div class="song-item">
                        <div class="song-rank">5</div>
                        <div class="song-info">
                            <div class="song-title">Đi Giữa Trời Rực Rỡ </div>
                            <div class="song-artist">Ngô Lan Hương, SK Pictures </div>
                        </div>
                    </div>

                    <div class="song-item">
                        <div class="song-rank">6</div>
                        <div class="song-info">
                            <div class="song-title">Sao Hạng A </div>
                            <div class="song-artist">ANH TRAI "SAY HI", HIEUTHUHAI, Dương Domic, Song Luân, JSOL </div>
                        </div>
                    </div>
                    <!-- Add more song items as needed -->
                </div>
            </div>
        </div>
    </section>
</body>
</html>
