
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>Simple Sidebar - Start Bootstrap Template</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="~/Image/Assets/favicon.ico" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/Content/Admin/Admin.css" rel="stylesheet" />
    <link href="~/Content/Admin/Data.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex" id="wrapper">
        <!-- Sidebar-->
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">Admin Page</div>
            <div class="list-group list-group-flush">
                <div class="list-group list-group-flush">
                    <!-- Songs link -->
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 ajax-link" href="#manage-songs">Songs</a>

                    <!-- Genre link -->
                    <a class="list-group-item list-group-item-action list-group-item-light p-3 ajax-link" href="#manage-genres">Genres</a>
                </div>
            </div>
        </div>

        <!-- Page content wrapper-->
        <div id="page-content-wrapper">
            <!-- Top navigation-->
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <button class="btn btn-primary" id="sidebarToggle">Toggle Menu</button>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav ms-auto mt-2 mt-lg-0">
                            <li class="nav-item active"><a class="nav-link" href="#!">Home</a></li>
                            <li class="nav-item"><a class="nav-link" href="#!">Link</a></li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Dropdown</a>
                                <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#!">Action</a>
                                    <a class="dropdown-item" href="#!">Another action</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="#!">Something else here</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            <!-- Page content-->
            <div class="container-fluid">
                <div id="manage-songs" class="section">
                    <h2>Quản Lý Bài Hát</h2>
                    <button onclick="document.getElementById('addSongForm').style.display='block'">Thêm Bài Hát</button>
                    <div id="addSongForm" style="display:none;">
                        <h3>Thêm Bài Hát Mới</h3>
                        <form action="/Song/AddSong" method="post"enctype = "multipart/form-data">> 
                            <input type="text" name="title" placeholder="Tên Bài Hát" required>
                            <input type="time" name="duration" placeholder="Thời Lượng" required>
                            <input type="date" name="releaseDate" placeholder="Ngày Phát Hành" required>
                            <input type="url" name="fileUrl" placeholder="URL File Nhạc" required>
                            <input type="file" name="imageUrl" placeholder="URL Hình Ảnh" required>

                            <select name="albumId" required>
                                <option value="">Chọn Album</option>
                                @foreach (var album in ViewBag.ListAl)
                                {
                                    <option value="@album[0]">@album[1]</option>
                                    <!-- Assuming AlbumID is at index 0, Title at index 1 -->
                                }
                            </select>
                            <select name="genreId" required>
                                <option value="">Chọn Thể Loại</option>
                                @foreach (var genre in ViewBag.ListGe)
                                {
                                    <option value="@genre[0]">@genre[1]</option>
                                    <!-- Assuming GenreID is at index 0, Name at index 1 -->
                                }
                            </select>
                            <button type="submit">Thêm</button>
                        </form>
                    </div>

                </div>

                <h3>Danh Sách Bài Hát</h3>
                <table border="1">
                    <tr>
                        <th>Hình</th>
                        <th>Tên Bài Hát</th>
                        <th>Thời Lượng</th>
                        <th>Ngày Phát Hành</th>
                        <th>Thể Loại</th>
                        <th>Album</th>
                        <th>Hành Động</th>
                    </tr>
                    @foreach (var song in ViewBag.list)
                    {
                        <tr>
                            <td>
                                <!-- Ensure the image URL is correct -->
                                <img src="~/Image/Data/@song[7]" alt="@song[7]" style="width:100px;height:auto;" />
                            </td>
                            <td>@song[3]</td> <!-- Assuming Title is at index 2 -->
                            <td>@song[4]</td> <!-- Assuming Duration is at index 3 -->
                            <td>@song[5]</td> <!-- Assuming ReleaseDate is at index 4 -->
                            <td>@song[2]</td> <!-- Assuming GenreID (you might want to replace this with Genre Name) -->
                            <td>@song[1]</td> <!-- Assuming AlbumID (you might want to replace this with Album Name) -->
                            <td>
                                <a href="~/Song/DeleteSong?id=@song[0]">Xóa</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>

            <div class="container-fluid">
                <div id="manage-genres" class="section">
                    <h2>Quản Lý Thể Loại</h2>
                    <button onclick="document.getElementById('addGenreForm').style.display='block'">Thêm Thể Loại</button>
                    <div id="addGenreForm" style="display:none;">
                        <h3>Thêm Thể Loại Mới</h3>
                        <form action="/Genre/AddGenre" method="post">
                            <input type="text" name="name" placeholder="Tên Thể Loại" required>
                            <button type="submit">Thêm</button>
                        </form>
                    </div>
                </div>

                <h3>Danh Sách Thể Loại</h3>
                <table border="1">
                    <tr>
                        <th>Tên Thể Loại</th>
                        <th>Hành Động</th>
                    </tr>
                    @foreach (var genre in ViewBag.ListGe)
                    {
                        <tr>
                            <td>@genre[1]</td> <!-- Genre Name -->
                            <td>
                                <a href="~/Genre/DeleteGenre?id=@genre[0]">Xóa</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="~/Scripts/Admin/Admin.js"></script>
</body>
</html>
