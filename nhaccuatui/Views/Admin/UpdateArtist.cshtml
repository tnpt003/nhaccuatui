@using System.Collections
@{
    Layout = null;
    var artistData = ViewBag.ArtistData != null && ViewBag.ArtistData.Count > 0 ? ViewBag.ArtistData : null;
}
<link href="~/css/Admin/Data.css" rel="stylesheet" />
<h2>Cập Nhật Nghệ Sĩ</h2>

@if (artistData != null)
{
    <form action="/Artist/UpdateArtist" method="post">
        <input type="hidden" name="artistId" value="@artistData[0]"> <!-- ArtistID -->

        <label>Tên Nghệ Sĩ:</label>
        <input type="text" name="name" value="@artistData[1]" placeholder="Tên Nghệ Sĩ" required>

        <label>Quốc Gia:</label>
        <input type="text" name="country" value="@artistData[3]" placeholder="Quốc Gia" required>

        <label>Tiểu Sử:</label>
        <textarea name="bio" placeholder="Tiểu Sử">@artistData[2]</textarea>

        <button type="submit">Cập Nhật</button>
    </form>
}
else
{
    <p>Không tìm thấy nghệ sĩ cần cập nhật.</p>
}

